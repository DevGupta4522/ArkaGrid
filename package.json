{
  "name": "arkagrid",
  "version": "1.0.0",
  "description": "ArkaGrid - Neighbourhood Energy Trading Platform - Full Stack Application",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "npm --prefix server run dev",
    "server:start": "npm --prefix server start",
    "server:db:setup": "npm --prefix server run db:setup",
    "client:dev": "npm --prefix client run dev",
    "client:build": "npm --prefix client run build",
    "install:all": "npm install && npm --prefix server install && npm --prefix client install",
    "build": "npm run client:build"
  },
  "keywords": [
    "arkagrid",
    "energy",
    "trading",
    "solar",
    "prosumer",
    "renewable",
    "peer-to-peer"
  ],
  "author": "ArkaGrid Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}